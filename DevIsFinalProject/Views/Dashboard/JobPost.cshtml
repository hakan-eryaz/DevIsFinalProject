                    <div class="mb-3">
                        <select id="locationLabel1" name="CategoryID" class="js-select2-custom custom-select" size="1" style="opacity: 0;">
                            <option value="">Seçiniz</option>
                            @foreach (var veri in ViewBag.Veriler)
                            {
                                <option value="@veri.CategoryID">@veri.CategoryName</option>
                            }
                        </select>
                    </div>
                    <!-- End Select -->
                    <div class="d-flex justify-content-end">
                        <div id="newProjectPopover" data-toggle="popover" data-placement="left" title="<div class='d-flex align-items-center'>New Category <a href='#!' class='close close-light ml-auto'><i id='closeNewProjectPopover' class='tio-clear'></i></a></div>" data-content="Add New Category." data-html="true">
                            <a class="btn btn-primary" asp-controller="Dashboard" asp-action="JobCategoryAdd">
