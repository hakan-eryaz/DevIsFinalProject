    <div class="card-body">
        <!-- Form -->
        <form method="post">
            <!-- Form Group -->
            <div class="row form-group">
                <label for="firstNameLabel" class="col-sm-3 col-form-label input-label">Job Title <i class="tio-help-outlined text-body ml-1" data-toggle="tooltip" data-placement="top" title="Displayed on public forums, such as Front."></i></label>

                <div class="col-sm-9">
                    <div class="input-group input-group-sm-down-break">
                        <input type="text" class="form-control" name="JobTitle" id="JobTitle" placeholder="Job Title" aria-label="Job Title" value="">
                    </div>
                </div>
            </div>
            <!-- End Form Group -->
            <!-- Form Group -->
            
            <!-- End Form Group -->
            <!-- Form Group -->
            
            <!-- End Form Group -->
            <!-- Form Group -->
