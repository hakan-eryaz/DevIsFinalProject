@model List<EntityLayer.Concrete.Job>
@{
    ViewData["Title"] = "Default";
    
}


        
                <!-- single-job-content -->
            @foreach (var item in Model)
            {
                <div class="single-job-items mb-30">
                    <div class="job-items">
                        <div class="company-img">
                            <a href="#"><img src="assets/img/icon/job-list2.png" alt=""></a>
                        </div>
                        <div class="job-tittle job-tittle2">
                            
                            <a asp-controller="Job" asp-action="JobDetails" asp-route-id="@item.JobID"><h4>@item.JobTitle</h4></a>
                            <ul>
                    <li></li>
                    <li><i class="fas fa-map-marker-alt"></i>@item.Location</li>
                    <li>@item.Salary</li>
                            </ul>
                        </div>
                    </div>
                    <div class="items-link f-right">
            <a asp-controller="Job" asp-action="JobDetails" asp-route-id="@item.JobID">Başvur</a>
            <span>@((DateTime.Now - item.PostedDate).Days) days @((DateTime.Now - item.PostedDate).Hours) hours ago</span>
                    </div>
                </div>
            }
