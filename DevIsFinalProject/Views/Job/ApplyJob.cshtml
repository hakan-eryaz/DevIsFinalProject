
@{
    ViewData["Title"] = "ApplyJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/assets/basvur.css">
</head>
<body>
    <div class="container">
        <h2>İletişim bilgilerini ekle</h2>
        <form>

            <label for="firstName">Ad (zorunlu)</label>
            <input type="text" id="firstName" required>

            <label for="lastName">Soyadı (zorunlu)</label>
            <input type="text" id="lastName" required>

            <label for="email">E-mail (zorunlu)</label>
            <input type="email" id="email" required>

            <label for="city">İlçe, Şehir</label>
            <input type="text" id="city" required>

            <label for="country">Bulunduğun ülke Türkiye değil mi?</label>
            <input type="text" id="country" required>

            <label for="phoneNumber">Telefon numarası</label>
            <input type="tel" id="phoneNumber" required>

            <label for="cv">CV Yükle (zorunlu)</label>
            <input type="file" id="cv" required>


            <!-- Expected Salary -->
            <label for="expectedSalary">Beklenen net maaş aralığını belirle. *</label>
            <select id="expectedSalary" required>
                <option value="">Select</option>
                <option value="7000-10000">7,000-10,000</option>
                <option value="10000-13000">10,000-13,000</option>
                <option value="13000-16000">13,000-16,000</option>
                <option value="16000-20000">16,000-20,000</option>
            </select>

            <a href="Quiz" class="btn head-btn2">Devam</a>
        </form>
    </div>
    <script src="~/assets/js/job_post_page.js"></script>
</body>
</html>