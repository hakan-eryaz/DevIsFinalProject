
@{
    ViewData["Title"] = "ApplyJob";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="~/assets/basvur.css">
</head>
<body>
    <div class="container">
        <h2>Özgeçmiş Tamamla</h2>
        <form method="post">

            <label for="firstName">Özgeçmiş Başlığı (zorunlu)</label>
            <input type="text" id="firstName" name="ResumeTitle" required>
            <br /><br />
            <label for="Experience">Deneyim aralığı seçiniz</label>
            <select id="Experience" name="Experience" required>
                <option value="">Seç</option>
                <option value="0-1 Yıl">0-1 Yıl</option>
                <option value="1-3 Yıl">1-3 Yıl</option>
                <option value="4-6 Yıl">4-6 Yıl</option>
                <option value="7-9 Yıl">7-9 Yıl</option>
                <option value="10+ Yıl">10+ Yıl</option>
            </select><br /><br />
            <label for="Level">Seviyenizi seçiniz.</label>
            <select id="Level" name="Level" required>
                <option value="">Seç</option>
                <option value="Tanımsız">Tanımsız</option>
                <option value="Junior">Junior</option>
                <option value="Mid">Mid</option>
                <option value="Senior">Senior</option>
            </select>
            <br /><br />
            <label for="Position">Sizi tanımlayan departman pozisyonu.</label>
            <select id="Position" name="Position" required>
                <option value="">Seç</option>
                <option value="Backend Developer">Backend Developer</option>
                <option value="Architect / Mimar">Architect / Mimar</option>
                <option value="Frontend Developer">Frontend Developer</option>
                <option value="Fullstack Developer">Fullstack Developer</option>
                <option value="Mobile Developer">Mobile Developer</option>
                <option value="ML Engineer">ML Engineer</option>
                <option value="Yönetici / Müdür">Yönetici / Müdür</option>
                <option value="Data Scientist">Data Scientist</option>
                <option value="Game Developer / Oyun Geliştirici">Game Developer / Oyun Geliştirici</option>
                <option value="Analist">Analist</option>
                <option value="DevOps Engineer">DevOps Engineer</option>
            </select>
            <br /><br />
            <label for="Salary">Maaş beklentiniz.</label>
                <select id="Salary" name="Salary" required>
                <option value="">Seç</option>
                    <option value="10000 - 12000">10000 - 12000</option>
                    <option value="12000 - 15000">12000 - 15000</option>
                    <option value="15000 - 18000">15000 - 18000</option>
                    <option value="18000 - 20000">18000 - 20000</option>
                    <option value="20000 - 25000">20000 - 25000</option>
                    <option value="25000 - 30000">25000 - 30000</option>
                    <option value="30000 - +++++">30000 - +++++</option>






            </select>
            <br /><br />
            <label for="technology">Uzman olduğunuz teknolojiler ?</label>
                <input type="text" id="technology" name="Technology" required>
            <br /><br />
            <label for="wayOfWorking">Çalışma şekli tercihiniz</label>
                <select id="wayOfWorking" name="Way_of_Working" required>
                <option value="">Seç</option>
                <option value="Ofis">Ofis</option>
                <option value="Hybrid">Hybrid</option>
                <option value="Remote">Remote</option>

                </select>
            <br/>
            <br />
            <label for="cv">CV Yükle (zorunlu)</label>
            <input type="file" id="cv">



            <button type="submit" class="btn btn-primary btn-lg" >Gönder</button>
        </form>
    </div>
    <script src="~/assets/js/job_post_page.js"></script>
</body>
</html>